<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--内边距-->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
    <!--填充，将边框内的颜色填充为金色-->
    <solid android:color="#d9d919" />
    <!--描边，背景边框的颜色-->
    <stroke android:width="5dp" android:color="#0000ff" />
    <!--圆角，设置边框的四个角为圆形-->
    <corners android:radius="15dp" />
    <!--渐变，将边框内的颜色从左往右渐变-->
    <gradient android:startColor="@color/teal_700" android:centerColor="#d9d919" android:endColor="@color/purple_700" />
    <!--渐变和填充都是对边框内颜色的设置，后者会覆盖前者的颜色-->
</shape>