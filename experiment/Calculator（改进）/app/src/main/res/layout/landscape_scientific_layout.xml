<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#6b238e">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="5dp"
                android:rowCount="6"
                android:gravity="top" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/back"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:textAllCaps="false"
                    android:text="back" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/one"
                    android:text="1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/two"
                    android:text="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/six"
                    android:text="6" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/seven"
                    android:text="7" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/pi"
                    android:text="π" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/percent_button"
                    android:text="%" />


            </GridLayout>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/right_fragment"
        android:layout_weight="1" >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#6b238e">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="5dp"
                android:rowCount="4"
                android:gravity="top" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/clear"
                    android:textAllCaps="false"
                    android:text="clear" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/equal"
                    android:text="=" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/sin_button"
                    android:text="sin" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/cos_button"
                    android:text="cos" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/three"
                    android:text="3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/four"
                    android:text="4" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/five"
                    android:text="5" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/tan_button"
                    android:text="tan" />
                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/teal_700"
                    android:text="8" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/nine"
                    android:text="9" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/zero"
                    android:text="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/pow_button"
                    android:text="pow" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/factorial"
                    android:text="x!" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/reciprocal"
                    android:text="1/x" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/ln"
                    android:text="ln" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_700"
                    android:layout_margin="5dp"
                    android:id="@+id/log"
                    android:text="lg" />


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/editText"
                    android:hint="请输入数字"
                    android:textSize="20dp"
                    android:gravity="right" />
            </GridLayout>

        </GridLayout>
    </LinearLayout>

</LinearLayout>
