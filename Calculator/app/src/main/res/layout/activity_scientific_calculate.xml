<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#855e42">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|right">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/editText_button"
            android:hint="请输入数字"
            android:textSize="20dp"
            android:gravity="right" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:padding="5dp"
        android:rowCount="10"
        android:gravity="top" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:layout_columnSpan="2"
            android:id="@+id/back_button"
            android:layout_gravity="fill_horizontal"
            android:text="back" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/clear_button"
            android:text="clear" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/sin_button"
            android:text="sin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/one_button"
            android:text="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/two_button"
            android:text="2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/three_button"
            android:text="3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/cos_button"
            android:text="cos" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/four_button"
            android:text="4" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/five_button"
            android:text="5" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/six_button"
            android:text="6" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/tan_button"
            android:text="tan" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/seven_button"
            android:text="7" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/eight_button"
            android:text="8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/nine_button"
            android:text="9" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/pow_button"
            android:text="pow" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/equal_button"
            android:text="=" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/zero_button"
            android:text="0" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/factorial"
            android:text="x!" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/log"
            android:text="lg" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/pi"
            android:text="π" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/percent_button"
            android:text="%" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/reciprocal"
            android:text="1/x" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:layout_margin="5dp"
            android:id="@+id/ln"
            android:text="ln" />
    </GridLayout>

</GridLayout>
